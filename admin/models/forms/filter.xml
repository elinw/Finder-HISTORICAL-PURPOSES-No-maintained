<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: filter.xml 981 2010-06-15 18:38:02Z robs $ -->
<form>
	<fields>
		<field
			name="filter_id"
			type="hidden"
			id="filter_id"
			class="inputbox"
			label="Id"
			size="10"
			default="0"
			filter="unset"
			readonly="true" />

		<field
			name="title"
			type="text"
			id="title"
			class="inputbox required"
			label="FINDER_FILTER_TITLE_LABEL"
			size="30"
			default=""
			required="true"
			filter="string"
			description="FINDER_FILTER_TITLE_DESC" />

		<field
			name="alias"
			type="text"
			id="alias"
			class="inputbox"
			label="FINDER_FILTER_ALIAS_LABEL"
			size="30"
			default=""
			filter="JFilterOutput::stringUrlSafe"
			description="FINDER_FILTER_ALIAS_DESC" />
	</fields>

	<fields group="details">
		<field
			name="created"
			type="text"
			id="created"
			class="inputbox"
			label="FINDER_FILTER_CREATED_LABEL"
			size="20"
			default=""
			readonly="true"
			filter="unset"
			description="FINDER_FILTER_CREATED_DESC" />

		<field
			name="modified"
			type="text"
			id="modified"
			class="inputbox"
			label="FINDER_FILTER_MODIFIED_LABEL"
			size="20"
			default=""
			readonly="true"
			filter="unset"
			description="FINDER_FILTER_MODIFIED_DESC" />

		<field
			name="state"
			type="list"
			id="state"
			class="inputbox"
			label="FINDER_FILTER_STATE_LABEL"
			default="1"
			required="true"
			filter="integer"
			description="FINDER_FILTER_STATE_DESC">
			<option value="0">FINDER_STATE_UNPUBLISHED</option>
			<option value="1">FINDER_STATE_PUBLISHED</option>
		</field>

		<field
			name="map_count"
			type="text"
			id="map_count"
			class="inputbox"
			label="FINDER_FILTER_MAP_COUNT_LABEL"
			size="10"
			default="0"
			description="FINDER_FILTER_MAP_COUNT_DESC"
			readonly="true"
			filter="unset" />
	</fields>
	
	<fields group="params" array="true" label="FINDER_FILTER_PARAMETERS">
		<field
			name="w1"
			type="list"
			label="FINDER_FILTER_WHEN_START_DATE_LABEL"
			description="FINDER_FILTER_WHEN_START_DATE_DESC"
			default=""
			filter="string">
			<option value="">FINDER_FILTER_WHEN_NONE</option>
			<option value="-1">FINDER_FILTER_WHEN_BEFORE</option>
			<option value="0">FINDER_FILTER_WHEN_EXACTLY</option>
			<option value="1">FINDER_FILTER_WHEN_AFTER</option>
		</field>

		<field
			name="d1"
			type="calendar"
			class="inputbox"
			label="FINDER_FILTER_START_DATE_LABEL"
			description="FINDER_FILTER_START_DATE_DESC"
			default=""
			filter="string"
			format="%Y-%m-%d" />

		<field
			name="w2"
			type="list"
			label="FINDER_FILTER_WHEN_END_DATE_LABEL"
			description="FINDER_FILTER_WHEN_END_DATE_DESC"
			default=""
			filter="string">
			<option value="">FINDER_FILTER_WHEN_NONE</option>
			<option value="-1">FINDER_FILTER_WHEN_BEFORE</option>
			<option value="0">FINDER_FILTER_WHEN_EXACTLY</option>
			<option value="1">FINDER_FILTER_WHEN_AFTER</option>
		</field>

		<field
			name="d2"
			type="calendar"
			id="node_date"
			class="inputbox"
			label="FINDER_FILTER_END_DATE_LABEL"
			description="FINDER_FILTER_END_DATE_DESC"
			default=""
			filter="string"
			format="%Y-%m-%d" />
	</fields>	
</form>