<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="filter_id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"  />

		<field
			name="title" type="text" id="title"
			label="JGLOBAL_TITLE" description="FINDER_FILTER_TITLE_DESC"
			size="30" default="" required="true" />

		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC" class="inputbox" size="45" />

		<field name="created" type="calendar" label="JGLOBAL_FIELD_CREATED_LABEL"
			description="JGLOBAL_FIELD_CREATED_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_FINDER_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
		</field>

		<field
			name="map_count" type="text" class="inputbox"
			label="FINDER_FILTER_MAP_COUNT_LABEL" description="FINDER_FILTER_MAP_COUNT_DESC"
			size="10" default="0" readonly="true" />
	</fieldset>
	
	<fields name="params">
		<field
			name="w1"
			type="list"
			label="FINDER_FILTER_WHEN_START_DATE_LABEL"
			description="FINDER_FILTER_WHEN_START_DATE_DESC"
			default=""
			filter="string">
			<option value="">FINDER_FILTER_WHEN_NONE</option>
			<option value="-1">FINDER_FILTER_WHEN_BEFORE</option>
			<option value="0">FINDER_FILTER_WHEN_EXACTLY</option>
			<option value="1">FINDER_FILTER_WHEN_AFTER</option>
		</field>

		<field name="d1" type="calendar" class="readonly"
			label="FINDER_FILTER_START_DATE_LABEL" description="FINDER_FILTER_START_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d" filter="user_utc" />

		<field
			name="w2"
			type="list"
			label="FINDER_FILTER_WHEN_END_DATE_LABEL"
			description="FINDER_FILTER_WHEN_END_DATE_DESC"
			default=""
			filter="string">
			<option value="">FINDER_FILTER_WHEN_NONE</option>
			<option value="-1">FINDER_FILTER_WHEN_BEFORE</option>
			<option value="0">FINDER_FILTER_WHEN_EXACTLY</option>
			<option value="1">FINDER_FILTER_WHEN_AFTER</option>
		</field>

		<field name="d2" type="calendar" class="readonly"
			label="FINDER_FILTER_START_DATE_LABEL" description="FINDER_FILTER_START_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d" filter="user_utc" />

	</fields>	
</form>